CREATE TABLE page_style
(jumbotron_title varchar(30) DEFAULT NULL,
id int(11) DEFAULT NULL,
jumbotron_subtitle varchar(50) DEFAULT NULL,
 jumbotron_color varchar(10) DEFAULT NULL,
 bottom_container_color varchar(10) DEFAULT NULL,
 section_title varchar(100) DEFAULT NULL,
  section_subtitle varchar(300) DEFAULT NULL,
 section_header varchar(300) DEFAULT NULL,
  image1_url varchar(500) DEFAULT NULL,
  image2_url varchar(500) DEFAULT NULL,
 image3_url varchar(500) DEFAULT NULL,
  image1_title varchar(200) DEFAULT NULL,
 image2_title varchar(200) DEFAULT NULL,
 image3_title varchar(200) DEFAULT NULL,
 image1_content varchar(200) DEFAULT NULL,
 image2_content varchar(200) DEFAULT NULL,
image3_content varchar(200) DEFAULT NULL,
 bottom_container1_title varchar(200) DEFAULT NULL,
 bottom_container2_title varchar(200) DEFAULT NULL,
bottom_container3_title varchar(200) DEFAULT NULL,
  bottom_container1_content varchar(300) DEFAULT NULL,
bottom_container2_content varchar(300) DEFAULT NULL,
 bottom_container3_content varchar(300) DEFAULT NULL)
